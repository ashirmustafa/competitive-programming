{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++",           // ðŸ‘ˆ This label must match exactly
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
